{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/sources.schema.json",
  "title": "Sources Registry Schema",
  "type": "object",
  "required": ["version", "sources"],
  "properties": {
    "version": { "type": "string", "minLength": 1 },
    "sources": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "connector", "name", "region", "trust_tier", "priority"],
        "properties": {
          "id": { "type": "string", "minLength": 3 },
          "enabled": { "type": "boolean" },
          "connector": { "type": "string", "enum": ["rss", "web", "api"] },
          "url": { "type": "string", "minLength": 0 },
          "name": { "type": "string", "minLength": 1 },
          "region": { "type": "string", "minLength": 1 },
          "trust_tier": { "type": "string", "enum": ["A", "B", "C"] },
          "priority": { "type": "integer", "minimum": 0, "maximum": 1000 },
          "tags": {
            "type": "array",
            "items": { "type": "string", "minLength": 1 }
          },
          "rate_limit": {
            "type": "object",
            "properties": {
              "rps": { "type": "number", "minimum": 0.0, "maximum": 1000.0 },
              "burst": { "type": "integer", "minimum": 0, "maximum": 10000 }
            },
            "additionalProperties": true
          },
          "parse_profile": { "type": "string" },
          "retired_reason": { "type": "string" },
          "retired_at": { "type": "string" }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
